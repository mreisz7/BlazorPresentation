@inherits SlideBase

<h1>Blazor Server vs. Blazor WebAssembly</h1>

<div class="row">
    <table>
        <thead>
            <tr>
                <th>Blazor Server</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Event handlers run on the server</td>
            </tr>
            <tr>
                <td>Browser events passed to the server</td>
            </tr>
            <tr>
                <td>Streamlined client/server communication</td>
            </tr>
            <tr>
                <td></td>
            </tr>
            <tr>
                <td>Best when UI updates depend on persistent state</td>
            </tr>
        </tbody>
    </table>

    <table>
        <thead>
            <tr>
                <th>Blazor WebAssembly</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>.NET runtime runs on the browser</td>
            </tr>
            <tr>
                <td>Client-side code loaded with the page</td>
            </tr>
            <tr>
                <td>Ahead Of Time (AOT) compilation</td>
            </tr>
            <tr>
                <td>Near native execution speed</td>
            </tr>
            <tr>
                <td>Best for intense client side tasks</td>
            </tr>
        </tbody>
    </table>
</div>
